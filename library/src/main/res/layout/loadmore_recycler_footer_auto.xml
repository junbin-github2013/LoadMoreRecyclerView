<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:background="@color/global_bg"
              android:gravity="center"
              android:orientation="horizontal"
              android:padding="10dp">


    <com.tt.whorlviewlibrary.WhorlView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loadmore_recycler_footer_whorl"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_marginTop="2dp"
        app:whorlview_circle_colors="#F14336_#00FF00_#5677fc_#F44336_#4CAF50"
        app:whorlview_circle_speed="360"
        app:whorlview_parallax="fast"
        app:whorlview_strokeWidth="6"
        app:whorlview_sweepAngle="90">
    </com.tt.whorlviewlibrary.WhorlView>
</LinearLayout>